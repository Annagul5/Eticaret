@{
    Layout = "_LayoutNew";
}



@{
    ViewData["Title"] = "Home Page";
}

<!-- banner area -->
<div class="banner">
	<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
		<!-- Wrapper for slides -->
		<div class="carousel-inner" role="listbox">
			<div class="item active">
				<img src="b1.jpg" alt="...">
				<div class="container">
					<!-- banner caption -->
					<div class="carousel-caption slide-one">
						<!-- heading -->
						<h2 class="animated fadeInLeftBig"><i class="fa fa-music"></i> %20</h2>
						<!-- paragraph -->
						<h3 class="animated fadeInRightBig">Ilk Alişverişte Kargo Bedava</h3>
						
					</div>
				</div>
			</div>
			<div class="item">
				<img src="b2.jpg" alt="...">
				<div class="container">
					<!-- banner caption -->
					<div class="carousel-caption slide-two">
						<!-- heading -->
						<h2 class="animated fadeInLeftBig"><i class="fa fa-headphones"></i>Hemen Al</h2>
						<!-- paragraph -->
						<h3 class="animated fadeInRightBig">En Güncel Albümler</h3>
						
					</div>
				</div>
			</div>
		</div>

		<!-- Controls -->
		<a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
			<span class="fa fa-arrow-left" aria-hidden="true"></span>
		</a>
		<a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
			<span class="fa fa-arrow-right" aria-hidden="true"></span>
		</a>
	</div>
</div>
