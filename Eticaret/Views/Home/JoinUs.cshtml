@{
    Layout = "_LayoutNew";
}

<!-- form content -->
<div class="form-content" style="margin-top:79px">
    <!-- paragraph -->
   
    <form asp-action="Usersave" id="contactForm" method="post">
        <div class="row">
            <div class="form-group">
                <label for="name">Ad</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Adınızı giriniz">
            </div>
            <div class="form-group">
                <label for="surname">Soyad</label>
                <input type="text" class="form-control" id="surname" name="surname" placeholder="Soyadınızı giriniz">
                
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Mail giriniz">
            </div>
            <div class="form-group">
                <label for="phone">Telefon</label>
                <input type="text" class="form-control" id="phone" name="phone" placeholder="Numaranızı giriniz">
            </div>

            <div class="form-group">
                <label for="message">Katilma Nedeniniz</label>
                <textarea class="form-control" id="message" name="message" rows="9" placeholder="Sebebinizi giriniz"></textarea>
            </div>


            <div class="text-center" style="text-align:right; margin-bottom:5px; margin-top:-25px; margin-right:-11px">
                <button type="submit" class="btn btn-lg btn-theme">Mesaj Gönder</button>
            </div>
        </div>
    </form>

</div>